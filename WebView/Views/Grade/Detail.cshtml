@{
    ViewData["Title"] = "Chi tiết điểm của lớp";
    ViewData["Icon"] = "fa-solid fa-asterisk";
}
<div class="container-fluid px-5 mt-n10">
    <div class="row">
        <div class="col-12 col-md-3">
            <div class="card mb-4 mb-xl-2 animated--fade-in-up">
                <div class="card-body">
                    <select class="form-select" id="listCourse"></select>
                </div>
            </div>
            <div class="card mb-4 mb-xl-2 animated--fade-in-up">
                <div class="card-header">Môn học</div>
                <div class="card-body" id="listAssessment">
                </div>
            </div>
            <div class="card mb-4 mb-xl-0 animated--fade-in-up">
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="onSave()">Primary</button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-9 animated--fade-in-up">
            <div class="card mb-4 mb-xl-0">
                <div class="card-body p-3 table-responsive" id="listStudent">
                    <table class="table "></table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/grade/detail.js"></script>
}